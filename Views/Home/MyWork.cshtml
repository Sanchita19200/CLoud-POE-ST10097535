@{
    ViewData["Title"] = "My Work";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>

        body {
            background: linear-gradient(to bottom, Red, Orange); /* Gradient background */
            font-family: Arial, sans-serif;
        }
        /* Add your CSS styles here */
        .craftwork {
            display: flex;
            flex-wrap: wrap;
            gap: 20px; /* Adjust the gap between images */
        }

        .craft-item {
            width: 200px; /* Set the width of each craft item */
        }

            .craft-item img {
                width: 100%; /* Ensure the image fills the container */
                height: 200px; /* Set the height of each image */
                object-fit: cover; /* Maintain aspect ratio and cover container */
                border-radius: 5px; /* Optional: Add rounded corners */
            }

        .description {
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.8); /* Optional: Add a semi-transparent background */
            border-radius: 5px; /* Optional: Add rounded corners */
        }
    </style>
</head>
